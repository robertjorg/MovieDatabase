<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies.Frontend.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="backgroundColor" x:FactoryMethod="FromHex">
                <x:Arguments>
                    <x:String>
                        #FFF6F6
                    </x:String>
                </x:Arguments>
            </Color>
            <Color x:Key="blackTextColor">Black</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#E2EAE2" />
                <Setter Property="BarTextColor" Value="#6B866B" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>