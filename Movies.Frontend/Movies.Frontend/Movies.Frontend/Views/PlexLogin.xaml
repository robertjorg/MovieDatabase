<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies.Frontend.Views.PlexLogin"
             Title="Plex Movie Get">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Login:" VerticalTextAlignment="Center"/>
            <Entry Placeholder="Plex Login" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Password:" VerticalTextAlignment="Center"/>
            <Entry IsPassword="True" HorizontalOptions="FillAndExpand"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Login" />
            <Button Text="Cancel" />
        </StackLayout>
    </StackLayout>
</ContentPage>